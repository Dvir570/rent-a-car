<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href='https://fonts.googleapis.com/css?family=Oxygen:400,300,700&subset=latin,latin-ext' rel='stylesheet' type='text/css'>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <!-- Navbar -->
    <div class="navbar navbar-default navbar-fixed-top navbar-style">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Rent a car", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    
    <!-- Content -->
    @RenderBody()
    
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h4>Rent a car</h4>
                    <p>
                        <strong>Address: </strong> Ulica 123, Varaždin
                    </p>
                    <p>
                        <strong>Contact: </strong> +385 42 299 999
                    </p>
                    <p>
                        <strong>Email: </strong> rent-a-car@mail.com
                    </p>
                    <p>
                        <strong>Business hours: </strong> 08:00 - 20:00
                    </p>
                </div>
                <div class="col-md-3">
                    <h4>Web map</h4>
                    <p>Home</p>
                    <p>About</p>
                    <p>Link 1</p>
                </div>
                <div class="col-md-3">
                    <h4>Partners</h4>
                    <p>Partner 1</p>
                    <p>Partner 2</p>
                    <p>Partner 3</p>
                    <p>Partner 4</p>
                </div>
                <div class="col-md-3">
                    <h4>User's corner</h4>
                    <button class="btn btn-block">Prijava</button>
                    <button class="btn btn-block">Registracija</button>
                </div>
            </div>
            <div class="row">
                <div class="footer-copyright">
                    <div class="text-right">
                        &copy; @DateTime.Now.Year - Rent a car
                    </div>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
